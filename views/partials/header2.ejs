                                                <ul class="none burguer-list">
                                                    <li class="lista_burger"><a href="/productos">Productos</a> </li>
                                                    <li class="lista_burger"><a href="/user/login">Login</li>
                                                    <li class="lista_burger"> <a href="/user/registro">Registro</li>
                                                </ul>
                                                <% } %>
                                    </div>
            </div>


            <div class="principal-carrito2">

