                    <input class="input-header" type="text" placeholder="Búsqueda..." name="search">
                    <div class="label-relative">

                        <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="icono-carrito2">
                <a class="label-relative" href="/carrito"><i class="fa-solid fa-cart-shopping"></i> <p class="cart-p cart-none"></p></a>
                <% if (locals.isAdmin) { %>
                    <a href="/admin"><i class="fa-solid fa-lock"></i></a>
                    <% } %>
                        <% if (locals.isLogged) { %>
                            <a class="initials" href="/user/profile"><span>
                                    <%= locals.userLogged.first_name[0].toUpperCase() +
                                        locals.userLogged.last_name[0].toUpperCase() %>
                                </span></a>


                            <% } else { %>
                                <a href="/user/registro"><i class="fa-solid fa-user-plus"></i></a>
                                <a href="/user/login"><i class="fa-solid fa-user"></i></a>
                                <% } %>

                                    <div class="burguer-container">
                                        <a class="burguer" href="#"> <i class="fa-solid fa-bars"></i></a>


                                        <% if (locals.isLogged) { %>
                                            <ul class="none burguer-list">
                                                <li class="lista_burger"><a href="/productos">Productos</a> </li>
                                                <li class="lista_burger"><a href="/user/profile">Mi perfil</a></li>
