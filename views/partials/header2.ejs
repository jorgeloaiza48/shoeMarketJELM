                        <li class="boton-carrito label-relative" ><a  href="/carrito"  >Carrito</a><i class="fa-solid fa-cart-shopping"></i><span class="cart-p-xl cart-none"></span> </li>
                        <% if (locals.isAdmin) { %>
                            <li class="lista__profile"><a href="/admin">Admin</a> <i class="fa-solid fa-lock"></i>
                                <ul class="lista__profile-down__admin">
                                    <li class="lista__profile-li" v><a href="/admin">Panel del control</a></li>
                                    <li class="lista__profile-li"><a href="/admin/lista/usuarios">Usuarios activos</a>
                                    </li>
                                    <li class="lista__profile-li"><a href="/admin/lista/usuariosinactivos">Usuarios
                                            inactivos</a></li>
                                    <li class="lista__profile-li"><a href="/admin/lista/productos">Productos activos</a>
                                    </li>
                                    <li class="lista__profile-li"><a href="/admin/lista/productosinactivos">Productos
                                            inactivos</a></li>
                                    <li class="lista__profile-li"><a href="/admin/productos/crear">Carga de
